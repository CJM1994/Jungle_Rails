<div class="container mt-5">
  <div class="d-flex justify-content-center row">
    <div class="col-md-8">
      <div class="p-3 bg-white rounded">
        <div class="row">
          <div class="col-md-6">
            <h1 class="text-uppercase">Order Confirmation</h1>
            <div class="billed">
              <span class="font-weight-bold text-uppercase">Billed: </span
              ><span class="ml-1"><%= @order.email %></span>
            </div>
            <div class="billed">
              <span class="font-weight-bold text-uppercase">Date: </span
              ><span class="ml-1"
                ><%= @order.updated_at.strftime('%m/%d/%Y') %></span
              >
            </div>
            <div class="billed">
              <span class="font-weight-bold text-uppercase">Order ID: </span
              ><span class="ml-1">#<%= @order.id %></span>
            </div>
          </div>
          <div class="col-md-6 text-right mt-3">
            <h4 class="text-danger mb-0"><%= @order.email %></h4>
            <span>Jungle.com</span>
          </div>
        </div>
        <div class="mt-3">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Unit</th>
                  <th>Price</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>

                <% @order.line_items.each do |item| %> <%= render 'item', item: item %> <% end %>

                <tr>
                  <td></td>
                  <td></td>
                  <td>Total</td>
                  <td>
                    <%= humanized_money_with_symbol(@order.total_cents / 100.00) %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
